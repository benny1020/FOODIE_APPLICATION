<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <Button
        android:id="@+id/intent_btn3"
        android:layout_width="193dp"
        android:layout_height="170dp"
        android:alpha="1"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Insert Information"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        android:visibility="visible"
        app:backgroundTint="#7537FF"
        app:iconPadding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp" />

    <Button
        android:id="@+id/intent_btn1"
        android:layout_width="193dp"
        android:layout_height="170dp"
        android:layout_marginTop="168dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Search recipe\nwith name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        android:visibility="visible"
        app:backgroundTint="#03AEAC"
        app:iconPadding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp" />

    <Button
        android:id="@+id/intent_btn5"
        android:layout_width="193dp"
        android:layout_height="175dp"
        android:layout_marginTop="336dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Recommend Exercise"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        android:visibility="visible"
        app:backgroundTint="#89CD00"
        app:iconPadding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/intent_btn2"
        android:layout_width="193dp"
        android:layout_height="170dp"
        android:alpha="0.5"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Search recipe\nwith ingredients"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        android:visibility="visible"
        app:backgroundTint="#753CF8"
        app:iconPadding="0dp"
        app:layout_constraintStart_toEndOf="@+id/intent_btn3"
        app:layout_constraintTop_toTopOf="@id/intent_btn3" />

    <Button
        android:id="@+id/intent_btn4"
        android:layout_width="193dp"
        android:layout_height="170dp"
        android:layout_marginTop="168dp"
        android:alpha="0.5"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Search recipe\nwith image"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        android:visibility="visible"
        app:backgroundTint="#00BDBC"
        app:iconPadding="0dp"
        app:layout_constraintStart_toEndOf="@+id/intent_btn3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tmp"
        android:layout_width="193dp"
        android:layout_height="175dp"
        android:layout_marginTop="336dp"
        android:alpha="0.5"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="TMP"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        android:visibility="visible"
        app:backgroundTint="#A5E329"
        app:iconPadding="0dp"
        app:layout_constraintStart_toEndOf="@+id/intent_btn5"
        app:layout_constraintTop_toTopOf="parent" />







</androidx.constraintlayout.widget.ConstraintLayout>