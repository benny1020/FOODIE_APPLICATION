<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nametag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="100dp"
        android:text="이   름"
        android:textSize="20dp"
        android:layout_marginLeft="55dp" />

    <TextView
        android:id="@+id/heighttag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="200dp"
        android:text="      키"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="55dp" />

    <TextView
        android:id="@+id/weighttag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nametag"
        android:layout_alignLeft="@+id/nametag"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginBottom="394dp"
        android:text="몸무게"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignBaseline="@+id/nametag"

        android:hint="홍길동"
        android:inputType="text"
        android:layout_toRightOf="@+id/nametag" />

    <EditText
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignBaseline="@+id/heighttag"

        android:hint="200"
        android:inputType="number"
        android:layout_toRightOf="@+id/heighttag" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/weighttag"
        android:ems="10"
        android:hint="70"
        android:inputType="number"
        android:layout_toRightOf="@+id/weighttag" />


    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:text="저장" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        android:text="DB삭제" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/layoutcolor"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_alignParentBottom="true"

        >

        <ImageButton
            android:id="@+id/tab_info"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:src="@drawable/baseline_accessibility_24" />

        <ImageButton
            android:id="@+id/tab_food"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:src="@drawable/baseline_restaurant_menu_24" />

        <ImageButton
            android:id="@+id/tab_ingrediants"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:src="@drawable/baseline_kitchen_24" />

        <ImageButton
            android:id="@+id/tab_camera"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:src="@drawable/baseline_photo_camera_24" />

        <ImageButton
            android:id="@+id/tab_exercise"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:src="@drawable/baseline_directions_run_24" />
    </LinearLayout>

</RelativeLayout>